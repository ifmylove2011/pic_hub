<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:xter="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dimen_5"
                tools:context="com.xter.picbrowser.fragment.PhotosFragment">

    <ScrollView
        android:id="@id/scrollview_album"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@id/view_space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.xter.pichub.view.AlbumGridView
                android:id="@+id/gv_photos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="@dimen/dimen_2"
                android:numColumns="3"
                android:verticalSpacing="@dimen/dimen_2"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
